alias itsmine="sudo chown -R $USER:$USER ."
alias kubectl-disconnect="kubectl config unset current-context"
alias socks-tunnel="ssh -D 9000 root@server"
alias tfmt="terraform fmt"

pyclean() {
    # Clears all Python cache files:
    # *.pyc
    # *.pyo
    # __pycache__
    sudo find . -type f -name '*.py[co]' -delete -o -type d -name __pycache__ -delete
}